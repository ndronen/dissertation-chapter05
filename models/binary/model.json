{
    "description": "binary classification model that predicts whether a proposed correction for a spelling error is the true correction",
    "min_frequency": 0,
    "min_length": 3,
    "max_length": 25,
    "non_word_csv": "../chapter04/data/train.csv",

    "model_input_width": 28,
    "non_word_input_name": "non_word_input",
    "candidate_word_input_name": "candidate_word_input",
    "target_name": "binary_correction_target",
    "real_words_only": false,

    "n_vocab": 255,
    "n_embed_dims": 10,
    "train_embeddings": true,
    "embedding_init": "uniform",

    "n_filters": 2000,
    "filter_width": 6,
    "pool_merge_mode": "cos",

    "fully_connected": [100,100,100],
    "n_residual_blocks": 0,
    "n_hidden_residual": 0,

    "sample_weight_exponent": 1,
    "batch_normalization": false,
    "siamese": false,
    "activation": "relu",
    "optimizer": "Adamax",
    "loss": "categorical_crossentropy",
    "distance_targets": [],
    "use_rank_target": false,

    "dropout_embedding_p": 0.0,
    "dropout_conv_p": 0.0,
    "dropout_fc_p": 0.5,
    "gaussian_noise_sd": 0.0,

    "mode": "transient",
    "patience": 5,
    "callback_monitor": "f1",
    "callback_monitor_mode": "max",
    "model_checkpoint_file": "model-{epoch:04d}.h5",
    "save_best_only": true,
    "seed": 17,
    "n_epoch": 20,
    "samples_per_epoch": 3000,
    "n_worker": 128,
    "n_callback_val_samples": 5000,
    "n_loss_val_samples": 1000,
    "run_test": false,
    "n_test_samples": 296499,
    "batch_size": 32,
    "fixed_callback_validation_data": true,
    "fixed_loss_validation_data": false,
    "use_correct_word_as_non_word_example": true,
    "max_candidates": 5,

    "embedding_max_norm": 1000,
    "filter_max_norm": 1000,
    "dense_max_norm": 5,
    "distance_target_max_norm": 1000,
    "l2_penalty": 0.0,
    "softmax_max_norm": 10,
    "clipnorm": 0,
    "border_mode": "valid"
}
